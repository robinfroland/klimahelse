<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceScreen
        android:key="PREF_DESCRIPTION"
        android:layout="@layout/onboarding_location_desc" />

    <SwitchPreference
        android:defaultValue="true"
        android:disableDependentsState="true"
        android:key="USE_DEVICE_LOCATION"
        android:summary="La appen bruke din nåværende posisjon for varsler"
        android:title="Bruk min posisjon"
        app:iconSpaceReserved="false" />

    <Preference
        android:dependency="USE_DEVICE_LOCATION"
        android:icon="@drawable/ic_search_black"
        android:iconSpaceReserved="true"
        android:key="location_search_settings"
        android:title="Søk etter område"
        app:fragment="com.example.helse.ui.SearchFragment"
        app:iconSpaceReserved="false" />

</PreferenceScreen>
